<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="3dp"
            android:layout_marginHorizontal="8dp"
            >

            <TextView
                android:id="@+id/list_member_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member name"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Balance "
                android:textColor="@color/black"
                android:id="@+id/list_member_balance_label"
                android:layout_below="@+id/list_member_name" />

            <TextView
                android:id="@+id/list_member_balance"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_member_name"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="-1dp"
                android:layout_toRightOf="@id/list_member_balance_label"
                android:text="$ 500"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/list_member_expense_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_member_name"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/list_member_balance"
                android:text="Expense "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/list_member_expense"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_member_name"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/list_member_expense_label"
                android:text="$ 100"
                android:textSize="16sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>